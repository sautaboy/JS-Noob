<body>
    <p>Start And Click As Much You Can And Click Stop And The Counting Will be Stoped, if You Want to Count Again
        Refresh teh Page Lol,ðŸ¤£</p>
    <h1 id="counter"></h1>
    <button id="start">Start</button>
    <button id="stop" onclick="stop()">Stop</button>
</body>
<script>
    let c = 0;
    document.getElementById("start").addEventListener("click", counter)
    function counter() {
        document.getElementById("counter").innerText = c
        c++
    }
    document.getElementById("start").addEventListener("mouseenter", colorChange);
    function colorChange() {
        document.getElementById("counter").style.color = "red"

    }
    document.getElementById("start").addEventListener("mouseleave", colorChangee);
    function colorChangee() {
        document.getElementById("counter").style.color = "hotPink"

    }
    function stop() {
        document.getElementById("start").removeEventListener("click", counter)
    }

</script>

</html>
